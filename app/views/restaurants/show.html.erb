<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h3>Reviews</h3>
<ul>
<% @restaurant.reviews.each do |review| %>
<li><%= review.content %> <br>Rating: <%= review.rating %></li>
<% end %>
</ul>

<br>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
<br>

<br><br><br>

<p><%= link_to "Edit information", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Back to list", restaurants_path %></p>
